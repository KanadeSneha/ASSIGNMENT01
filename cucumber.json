{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/tests/features/**/*.feature"
        ],
        "publishQuiet": true,
        "dryRun": false,
        "require": [
            "src/tests/steps/**/*.ts",
            "src/tests/support/**/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress",
            "html: cucumber-report.html",
            "allure-cucumberjs"
        ]
    }
}
